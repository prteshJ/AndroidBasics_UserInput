<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Title for the application. [CHAR LIMIT=12] -->
    <string name="app_name">proprio Java</string>

    <!-- Hint text display in the empty field for the user's name [CHAR LIMIT=20] -->
    <string name="name">Nome</string>

    <!-- Title for Toppings [CHAR LIMIT=NONE] -->
    <string name="toppings">Toppings</string>

    <!-- Title for topping whipped cream [CHAR LIMIT=NONE] -->
    <string name="whipped_cream">"Panna montata "</string>

    <!-- Title for topping chocolate [CHAR LIMIT=NONE] -->
    <string name="chocolate">Cioccolato</string>

    <!-- Title for quantity of coffee ordered [CHAR LIMIT=NONE] -->
    <string name="quantity">Quantità</string>

    <!-- Default quantity value [CHAR LIMIT=NONE] -->
    <string name="initial_quantity_value">2</string>

    <!-- Title for order [CHAR LIMIT=NONE] -->
    <string name="order">Ordine</string>

    <!--
     Name for the order summary. It will be shown in the format of "Name: Amy" where Amy is the
     user's name. [CHAR LIMIT=NONE]
   -->
    <string name="order_summary_name">Nome: <xliff:g example="Amy" id="name">%s</xliff:g></string>

    <!--
   Whipped cream topping for the order summary. It will be shown in the format of
   "Add whipped cream? true" or "Add whipped cream? false". [CHAR LIMIT=NONE]
 -->
    <string name="order_summary_whipped_cream">Aggiungere la panna montata?<xliff:g example="true" id="addWhippedCream">%b</xliff:g></string>

    <!--
      Chocolate topping for the order summary. It will be shown in the format of
      "Add chocolate? true" or "Add chocolate? false". [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_chocolate">Aggiungere il cioccolato? <xliff:g example="true" id="addChocolate">%b</xliff:g></string>

    <!--
      Quantity of coffee cups for the order summary. It will be shown in the format of
      "Quantity: 2", where 2 is the number of cups ordered. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_quantity">Quantità: <xliff:g example="2" id="quantity">%d</xliff:g></string>

    <!--
      Total price for the order summary. It will be shown in the format of
      "Total: $10" where $10 is the price. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_price">Totale: <xliff:g example="$10" id="price">%s</xliff:g></string>

    <!-- Thank you message for the order summary. [CHAR LIMIT=NONE] -->
    <string name="thank_you">Grazie!</string>

    <!--
      Subject line for the order summary email. It will be in the format of
      "Just Java order for Amy" where Amy is the user's name. [CHAR LIMIT=NONE]
    -->
    <string name="order_summary_email_subject">Proprio ordine Java per <xliff:g example="Amy" id="name">%s</xliff:g></string>

    <!--
        Toast message shown to user in case of more than maximum coffees ordered
    -->
    <string name="too_many_coffee_orders">Non si può avere più di <xliff:g example="100" id="quantity">%d</xliff:g> caffè </string>

    <!--
    Toast message shown to user in case of more than maximum coffees ordered
    -->
    <string name="too_less_coffee_orders">Non si può avere meno di <xliff:g example="1" id="quantity">%d</xliff:g> caffè </string>

</resources>
